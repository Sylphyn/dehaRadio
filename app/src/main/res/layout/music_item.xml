<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:padding="10dp"
                android:background="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:src="@drawable/logo"
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="80dp"
                    android:id="@+id/imvThumbnail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/colorWhite"
                    android:textSize="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imvThumbnail"
                    android:id="@+id/tvMusicName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/imvThumbnail"
                    android:layout_below="@+id/tvMusicName"
                    android:id="@+id/tvShowMessage"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:adjustViewBounds="true"
                    android:maxWidth="80dp"
                    android:maxHeight="70dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_compact_disk"
                    android:layout_toRightOf="@id/tvMusicName"
                    android:id="@+id/imvStatusPlay"
                    android:layout_width="55dp"
                    android:layout_height="55dp"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>